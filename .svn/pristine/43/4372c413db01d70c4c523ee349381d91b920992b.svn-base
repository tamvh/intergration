var theApp = angular.module('theApp', ['ngRoute', 'ngCookies', 'ui.bootstrap', 'ngFileUpload', 'angular-confirm','ngMaterial', 'bootstrapLightbox', 'angularjs-dropdown-multiselect', 'monospaced.qrcode']);

(function () {
    'use strict';    
    

    theApp
        .config(config)
        .run(run);

    config.$inject = ['$routeProvider', '$locationProvider', '$httpProvider'];
    function config($routeProvider, $locationProvider, $httpProvider) {
        $routeProvider
            .when('/', {
                controller: 'DashboardController',
                templateUrl: 'dashboard/dashboard.view.html?v='+ versionConfig.TEMPLATE_DASHBOARD_VERSION,
                controllerAs: 'vm'
            })
            .when('/dashboard/', {
                controller: 'DashboardController',
                templateUrl: 'dashboard/dashboard.view.html?v='+ versionConfig.TEMPLATE_DASHBOARD_VERSION
            })
            .otherwise({ redirectTo: '/' });
        
        $httpProvider.defaults.headers.post['Content-Type'] = 'application/x-www-form-urlencoded';
        
    }

    run.$inject = ['$rootScope', '$cookies', '$location'];
    function run($rootScope, $cookies, $location) {
        $rootScope.globals = {currentUser: {}};

        $rootScope.globals.currentUser.username = ($cookies.get('u')!= undefined ? $cookies.get('u') : "" );;
        
        $rootScope.$on('$locationChangeStart', function (event, next, current) {
            
        });
    };

})();
