<div id="wrapper">
  <div class="container body">
    <div class="main_container">
      <div ng-include src="'sidebar/sidebar.view.html'"></div> 
      <!-- top -->
      <div ng-include src="'header/header.view.html'"></div> 
      <!-- main content -->
      <div class="right_col" role="main" >
        
        <br>
        <hr class="hr_line">
        <br>

        <div class="row">
          <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6" >
            <div>
              <h2>Danh sách món ăn</h2>
            </div>
            <div class="">
              <table id="tbTags" class="table table-hover table-condensed table-bordered jambo_table bulk_action">
                <thead>
                    <tr>
                        <th class="col-md-4 col-sm-4 col-xs-4">Tên hàng</th>
                        <th class="col-md-4 col-sm-4 col-xs-4">Giá</th>
                        <th class="col-md-4 col-sm-4 col-xs-4">Chức năng</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="item in itemList">
                        <td class="col-md-4 col-sm-4 col-xs-4 aln_left" >{{ item.name}} </td>
                        <td class="col-md-4 col-sm-4 col-xs-4 aln_rigth" >{{ item.price | currency:"":0 }}</td>
                        <td class="col-md-4 col-sm-4 col-xs-4">
                            <div class="buttons" style="text-align: center;">
                                <button class="btn btn-primary btn-circle fa fa-plus" ng-click="selectItem(item)"></button>
                            </div>  
                        </td>   
                    </tr>
                </tbody> 
              </table>
            </div>
          </div>

          <div class="col-lg-6 col-md-6 col-xs-6 " >
            <div>
              <h2>Các món đã chọn</h2>
            </div>
            <div class="">
              <table id="tbTags" class="table table-hover table-condensed table-bordered jambo_table bulk_action">
                <thead>
                    <tr>
                        <th class="col-md-4 col-sm-4 col-xs-4">Tên hàng</th>
                        <th class="col-md-3 col-sm-3 col-xs-3">Số lượng</th>
                        <th class="col-md-4 col-sm-4 col-xs-4">Thành tiền</th>
                        <th class="col-md-4 col-sm-4 col-xs-4">Chức năng</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="item in itemSelectedList">
                        <td class="col-md-4 col-sm-4 col-xs-4 aln_left" >{{ item.name}} </td>
                        <td class="col-md-3 col-sm-3 col-xs-3 aln_left" >{{ item.quantity}}</td>
                        <td class="col-md-4 col-sm-4 col-xs-4">{{ (item.price * item.quantity) | currency:"":0 }}</td>
                        <td class="col-md-4 col-sm-4 col-xs-4">
                            <div class="buttons" style="text-align: center;">
                                <button class="btn btn-danger btn-circle fa fa-remove" ng-click="removeSelectItem($index)"></button>
                            </div>
                        </td>
                    </tr>
                </tbody> 
              </table>
            </div>
          </div>
        </div>

        <br>
        <hr class="hr_line">
        <br>

        <div>
          <div style="margin-bottom: 10px;">
            <h2>Hóa đơn</h2>
          </div>

          <div class="form-group">
            <div class="row">
              <div class="col-md-2 col-sm-2 col-xs-2">
                  <label>Tổng tiền:</label> 
              </div>
              <div class="col-md-8 col-sm-8 col-xs-8">
                  <label>{{ amount | currency:"":0}}</label>
              </div>
            </div> 
          </div>

          <div class="form-group">
            <div class="row">
              <div class="col-md-3 col-sm-3 col-xs-3">
                  <button class="btn btn-primary" type="submit" ng-click="payment()" ng-disabled="itemSelectedList.length == 0">Thanh toán</button>
              </div>
            </div> 
          </div>


        </div>

      </div>        
  </div>    
</div>

<script type="text/ng-template" id="qrcode.html">

    <div class="modal-header">
        <h3 class="modal-title" id="modal-title">Quét QR để thanh toán</h3>
    </div>
    <div class="modal-body">
        <div class="row" style="text-align: center">
            <!-- <h4>{{qrInfoStr}}</h4> -->
            <qrcode data="{{qrInfoStr}}" size="400"></qrcode>
                     
        </div>
        
    </div>
    
</script>