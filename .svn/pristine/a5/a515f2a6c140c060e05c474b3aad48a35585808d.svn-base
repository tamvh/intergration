(function() {
    'use strict';

    theApp
            .factory('AreaService', AreaService);

    AreaService.$inject = ['$rootScope', '$http', '$q', 'API_URL'];
    function AreaService($rootScope, $http, $q, API_URL) {
        var service = {};
        var url = API_URL + "area";

        service.getListAreas = getListAreas;
        service.editArea = editArea;
        service.deleteItem = deleteItem;

        return service;

        function getListAreas(areaName, currentPage, itemPerPage) {
            var cmd = "list_areas";
            var dtJSON = {area_name: areaName, current_page: currentPage, item_per_page: itemPerPage};
            var dt = JSON.stringify(dtJSON);
            var data = $.param({
                cm: cmd,
                dt: dt
            });
            return $http.post(url, data).then(handleSuccess, handleError('Error get summary in dashboard'));

        }

        function editArea(areaInfo, cmd) {
            var dtJSON = {area_info: areaInfo};
            var dt = JSON.stringify(dtJSON);
            var data = $.param({
                cm: cmd,
                dt: dt
            });
            return $http.post(url, data).then(handleSuccess, handleError('Error creating area'));

        }

        function deleteItem(listID) {
            var cmd = "delete";
            var dtJSON = {list_area_id_del: listID};
            var dt = JSON.stringify(dtJSON);
            var data = $.param({
                cm: cmd,
                dt: dt
            });
            return $http.post(url, data).then(handleSuccess, handleError('Error deleting area'));
        }
        function handleSuccess(res) {
            console.log('success');
            return res.data;
        }

        function handleError(error) {
            return function() {

                console.log('fail');
                return {err: -2, msg: error};
            };
        }

    }

})();
